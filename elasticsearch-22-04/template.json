{
  "variables": {
    "do_api_token": "{{env `DIGITALOCEAN_API_TOKEN`}}",
    "image_name": "elasticsearch-22-04-snapshot-{{timestamp}}",
    "application_name": "ElasticSearch",
    "application_version": "Latest"
  },
  "sensitive-variables": ["do_api_token"],
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `do_api_token`}}",
      "image": "ubuntu-22-04-x64",
      "region": "sfo3",
      "size": "s-1vcpu-1gb",
      "ssh_username": "root",
      "snapshot_name": "{{user `image_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "cloud-init status --wait"
      ]
    },
    {
      "type": "file",
      "source": "common/files/var/",
      "destination": "/var/"
    },
    {
      "type": "file",
      "source": "elasticsearch-22-04/files/etc/",
      "destination": "/etc/"
    },
    {
      "type": "file",
      "source": "elasticsearch-22-04/files/var/",
      "destination": "/var/"
    },
    {
      "type": "shell",
      "environment_vars": [
        "application_name={{user `application_name`}}",
        "DEBIAN_FRONTEND=noninteractive",
        "LC_ALL=C",
        "LANG=en_US.UTF-8",
        "LC_CTYPE=en_US.UTF-8"
      ],
      "scripts": [
        "elasticsearch-22-04/scripts/01-packages.sh",
        "common/scripts/020-application-tag.sh",
        "common/scripts/900-cleanup.sh",
        "common/scripts/018-force-ssh-logout.sh"
      ]
    }
  ]
}
